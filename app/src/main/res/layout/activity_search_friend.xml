<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sketch_talk_base">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:id="@+id/friend_search_container">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/back_image"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:id="@+id/search_friend_back"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:singleLine = "true"
            android:lines = "1"
            android:id="@+id/search_friend_editText"
            android:hint="친구 검색"/>


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/search_icon"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:id="@+id/search_friend_search"/>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friend_search_container">


        <ListView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/list_friend_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"/>



    </FrameLayout>

</RelativeLayout>