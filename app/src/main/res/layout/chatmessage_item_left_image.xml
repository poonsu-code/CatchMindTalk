<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="#89cbed">


    <ImageView
        android:id="@+id/msgProfileImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="top"
        android:layout_marginStart="10dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:src="@drawable/default_profile_image" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical">


        <TextView
            android:id="@+id/msgNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#89cbed"
            android:text="nickname"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_marginStart="8dp"/>



        <ImageView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="8dp"
            android:id="@+id/sendImageViewLeft" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/sendImageViewLeft"
            android:layout_alignBottom="@+id/sendImageViewLeft"
            android:background="#89cbed"
            android:orientation="vertical"
            android:layout_gravity="bottom">


            <TextView
                android:id="@+id/unReadLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#89cbed"
                android:textSize="10dp"
                android:layout_gravity="center_vertical"
                android:textColor="#FFFF00"
                android:gravity="center_vertical"
                android:text="99"/>


            <TextView
                android:id="@+id/msgTimeLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#89cbed"
                android:textSize="11dp"
                android:layout_gravity="center_vertical"
                android:textColor="#000000"
                android:gravity="center_vertical" />
        </LinearLayout>






    </RelativeLayout>


    </LinearLayout>







